<div class="uk-card uk-card-default uk-card-hover uk-card-body">
  <ul uk-tab><li class="uk-active"><a href="#"><h2 class="uk-margin-remove"><%= @post.title %></h2></a></li></ul>
  <article class="uk-comment">
    <header class="uk-comment-header">
      <div class="uk-grid-medium uk-flex-middle" uk-grid>
        <div class="uk-width-auto">
          <img class="uk-comment-avatar" src="https://getuikit.com/docs/images/avatar.jpg" width="80" height="80" alt="">
        </div>
        <div class="uk-width-expand">
          <h4 class="uk-comment-title uk-margin-remove"><%= link_to @post.user.name, "#" %></h4>
          <ul class="uk-comment-meta uk-subnav uk-subnav-divider uk-margin-remove-top">
            <li><%= @post.created_at %></li>
          </ul>
        </div>
      </div>
    </header>
  </article><hr />
  <%= @post.content %>
</div>
