<!DOCTYPE html>
<html>
  <head>
    <title>DatBlog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.6.19/dist/js/uikit.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.6.19/dist/js/uikit-icons.min.js"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "layouts/header" %>
    <div class="uk-container uk-container-large">
      <%= flash[:success] %>
      <%= yield %>
    </div>
    <%= render "layouts/footer" %>
    <script>
      <% if flash[:success].present? %>
        UIkit.notification({message: "<span uk-icon=\'icon: check\'></span> <%= flash[:success] %>",
          pos: 'top-right', status:'success'})
      <% end %>
    </script>
  </body>
</html>
